{
  "compilerOptions": {
    "target": "es2016",
    "lib": [
      "es6",
      "dom"
    ],
    "module": "commonjs",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "noImplicitAny": true,
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src"
  },
  "include": [
    "./src/**/*.ts",
    "./src/**/*.js"
  ]
}
